<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ikm.myagenda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="32dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_travel_transparent_background"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="22dp" >

        <com.ikm.myagenda.font.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/transparent_button_selector"
            android:gravity="right"
            android:text="@string/change_password"
            android:textColor="@color/main_color_grey_700"
            android:textSize="23sp"
            app:typeface="robotoThin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.ikm.myagenda.font.MaterialDesignIconsTextView
                android:id="@+id/icon_old_password"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_change_password"
                android:textColor="@color/main_color_500"
                android:textSize="22dp" />

            <com.ikm.myagenda.view.FloatLabeledEditText
                android:id="@+id/txt_old_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/oldPassword"
                app:fletHintTextColor="@color/main_color_500"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/main_color_grey_700" >
            </com.ikm.myagenda.view.FloatLabeledEditText>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.ikm.myagenda.font.MaterialDesignIconsTextView
                android:id="@+id/icon_new_password"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_change_password2"
                android:textColor="@color/main_color_500"
                android:textSize="22dp" />

            <com.ikm.myagenda.view.FloatLabeledEditText
                android:id="@+id/txt_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/newPassword"
                app:fletHintTextColor="@color/main_color_500"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/main_color_grey_700" >
            </com.ikm.myagenda.view.FloatLabeledEditText>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.ikm.myagenda.font.MaterialDesignIconsTextView
                android:id="@+id/icon_confirm_new_password"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_change_password3"
                android:textColor="@color/main_color_500"
                android:textSize="22dp" />

            <com.ikm.myagenda.view.FloatLabeledEditText
                android:id="@+id/txt_confirm_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/confirmNewPassword"
                app:fletHintTextColor="@color/main_color_500"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/main_color_grey_700" >
            </com.ikm.myagenda.view.FloatLabeledEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="12dp"
            android:gravity="right" >

            <com.ikm.myagenda.font.RobotoTextView
                android:id="@+id/change_password"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/login_travel_selector_button"
                android:minWidth="96dp"
                android:text="@string/change_password"
                android:textColor="@android:color/white"
                app:typeface="robotoMedium" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>