<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_redbackground"
    android:orientation="vertical" >

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Agus&apos;s Agenda"
        android:textColor="@color/grey"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvTitleSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:text="SD Citra Kasih"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvJudulList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingBottom="10dp"
        android:text="List Agenda"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.fortysevendeg.swipelistview.SwipeListView
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listAgenda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/red"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeDrawableChecked="@drawable/choice_selected"
        swipe:swipeDrawableUnchecked="@drawable/choice_unselected"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="none" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvJudulList2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingBottom="10dp"
        android:text="List Pengumuman"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.fortysevendeg.swipelistview.SwipeListView
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listPengumuman"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@color/red"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeDrawableChecked="@drawable/choice_selected"
        swipe:swipeDrawableUnchecked="@drawable/choice_unselected"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="none" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:text="Copyright Â© 2015 Indo Kanaan Mandiri (IKM Solution)"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Version 1.0.0"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="normal"
        android:typeface="serif" />

</LinearLayout>