<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_redbackground"
    android:gravity="top|center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="Agus&apos;s Agenda"
            android:textColor="@color/grey"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tvTitleSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="SD Citra Kasih"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="@color/white"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/white"
                app:ms_floatingLabelColor="@color/white"
                app:ms_floatingLabelText="Kelas"
                app:ms_highlightColor="@color/blue"
                app:ms_hint="Kelas"
                app:ms_multiline="true" />

            <TextView
                android:id="@+id/lblCalender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Agenda"
                android:textColor="@color/white" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:mcv_arrowColor="@color/white"
                app:mcv_firstDayOfWeek="sunday"
                app:mcv_selectionColor="@color/black_transparant"
                app:mcv_tileSize="36dp" />

            <!--
                  <TextView
                android:id="@+id/lblIsiAgenda"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Isi Agenda"
                android:textColor="@color/white" />
            -->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/isiAgenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Isi Agenda"
                app:met_baseColor="@color/white"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelTextSize="14sp"
                app:met_maxCharacters="500"
                app:met_primaryColor="@color/white"
                app:met_textColor="@color/white"
                app:met_underlineColor="@color/white" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dip"
                android:background="@color/blue"
                android:text="@string/btn_save" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:text="Copyright Â© 2015 Indo Kanaan Mandiri (IKM Solution)"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="serif" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Version 1.0.0"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>